#compile_form {
  background: #C3C9F2;
  padding:    20px;
  height:     200px;
  overflow:   hidden;
}

#compile_form  #copy_ref_button {
  background-image: url("images/copy_ref_button.png");
  background-repeat: no-repeat;
  width: 100%;
}
#compile_form textarea {
  height: 170px;
  width:  99%;
  background-image:     url("images/vaniquotes-logo-bg.png");
  background-repeat:    no-repeat;
  background-position:  center;
}
#compile_form #submit_quote, #compile_form #clear_form {
  position: relative;
  float: right;
  margin: 0px 2px;
}

#compile_form #submit_quote {
  padding: 2px 4px;
}

#compile_form #clear_form {
  padding: 1px;
}
